<%-include('header')-%>
<h3>
    dashboard
</h3>
<a href="/admin/home" class="btn btn-success">
    Go to Home
</a>

<br><br>
<p>Add new USer:</p>

<a href="/admin/new-user" class="btn btn-success">
ADD
</a>

<br>
<br>
<table style="width:50%">
<tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>Image</th>
    <th>verified</th>
    <th>Actions</th>
    
</tr>
<%
if(users.length > 0) {
    for(let i=0; i<users.length; i++) { %>
        <tr>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].mobile %></td>
            <td><img src="/userImages/<%= users[i].image %>" alt="<%= users[i].image %>" height="60px" width="60px"></td>
            <td><%if(users[i].is_varified ===0){
                %>
                <p>Not verified</p>
           <% }  else{%>
           <p> verified</p> <%}%>
        </td>
        <td><a href="/admin/edit-user">Edit</a></td>
        </tr>
<%
    }
} else { %>
    <tr>
        <td colspan="4">User Not Found</td>
    </tr>
<%
}
%>


</table>


<%-include('footer')-%>