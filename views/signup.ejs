<%-include('header')-%>
<div class="w-25 center-divs">
    <form action="/signup" method="POST" enctype="multipart/form-data">
        
        <div class="container p-4 form-group">
            <h2 class="text-center">Sign up</h2>
        <p class="text-center">Hello!</p>
        <label class="form-label">Name</label>
        <input type="text" name="name" placeholder="Enter Your Name"  class="form-control mb-2"required>
        <label class="form-label">address</label>
        <input type="text" name="address" placeholder="Enter Your address" class="form-control mb-2"required>
        <label class="form-label">Mobile Number</label>
        <input type="text" name="mobile" placeholder="Enter Your mobile number" class="form-control mb-2"required>
        <label class="form-label">Email</label>
        <input type="email" name="email" placeholder="Enter Your email address" class="form-control mb-2"required>
        <label class="form-label">
            password
        </label>
        <input type="password" name="password" placeholder="Enter password" class="form-control mb-2" required>
        <label class="form-label">upload photo</label>
        <input type="file" name="image" placeholder="Upload photo" class="form-control mb-2"required>
        <button class="btn btn-success rounded-pill ps-4 pe-4 pt-2 pb-2 mt-2">
            Sign Up
        </button>
    </div>
    </form>
</div>

<% if(typeof message !=='undefined'){ %>
    <p id="display" class="text-success"> <%= message %></p>
<%}%>
